<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_background_popup">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
        <EditText
            android:id="@+id/btn_min_hours"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:paddingLeft="8dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:layout_gravity="start|top"
            android:background="@drawable/input_box_vector"
            android:hint="Min Hours"/>

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent" />

        <EditText
            android:id="@+id/btn_max_hours"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:layout_gravity="end|top"
            android:hint="Max Hours"
            android:background="@drawable/input_box_vector"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_hours"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:background="@drawable/turbo_button_vector"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/turboBeige" />

    </LinearLayout>
</androidx.cardview.widget.CardView>