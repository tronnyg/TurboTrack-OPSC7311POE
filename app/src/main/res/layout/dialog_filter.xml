<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_background_popup">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/categories_start_date"
                android:layout_width="115dp"
                android:layout_height="38dp"
                android:background="@drawable/add_button_vector"
                android:textColor="@color/black"
                android:layout_gravity="start|top"
                android:inputType="date"
                android:hint="Start Date" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/categories_end_date"
                android:layout_width="115dp"
                android:layout_height="38dp"
                android:layout_gravity="end|top"
                android:textColor="@color/black"
                android:background="@drawable/add_button_vector"
                android:hint="End Date" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_date"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:background="@drawable/turbo_button_vector"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/turboBeige" />

    </LinearLayout>
</androidx.cardview.widget.CardView>