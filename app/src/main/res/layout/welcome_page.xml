<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbl_TurboTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:text="TurboTrack"
        android:textColor="@color/turboBlue"
        android:textSize="45dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lbl_Accelerate"
        android:layout_width="307dp"
        android:layout_height="67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="162dp"
        android:gravity="top"
        android:text="Accelerate Your Productivity on the Fast Track to Success"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:srcCompat="@drawable/img_work__from_home" />

</RelativeLayout>