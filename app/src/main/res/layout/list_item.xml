<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/timesheet_frame">

        <ImageView
            android:id="@+id/entry_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/completed_icon">

        </ImageView>
        <TextView
            android:id="@+id/entry_date_time"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="8/09/2024 - 10:00"
            android:textSize="12sp"
            android:textColor="#E69A9A9A"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.2sp"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/entry_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Order Management and Fulfillment"
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.67sp"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/entry_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="Category: Software Development"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#585A66"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.2sp"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/entry_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="Develop an order management system to track order status, payment status, and shipping details."
            android:textSize="12sp"
            android:textColor="#585A66"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.2sp"
            android:gravity="top"
            />
    </RelativeLayout>
</LinearLayout>